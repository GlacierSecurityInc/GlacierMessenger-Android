<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_with_icon_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorToolbar"
    android:gravity="right|center_vertical"
    android:minHeight="?attr/actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="?popupOverlayStyle">

    <ImageButton
        android:id="@+id/contact_status_icon"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:layout_gravity="left|center_vertical"
        android:adjustViewBounds="true"
        android:layout_marginLeft="@dimen/status_icon_left_padding"
        android:layout_marginRight="@dimen/status_icon_right_padding"
        android:layout_marginStart="@dimen/status_icon_left_padding"
        android:layout_marginEnd="@dimen/status_icon_right_padding"
        app:srcCompat="@drawable/ic_green_small" />

    <ImageButton
        android:id="@+id/down_arrow"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:adjustViewBounds="true"
        android:clickable="false"
        app:srcCompat="@drawable/ic_expand" />

</androidx.appcompat.widget.Toolbar>