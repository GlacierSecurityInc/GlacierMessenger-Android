<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/color_background_menu_logo"
        android:scaleType="centerCrop"
        android:src="@drawable/glacier_menu_logo2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/spacing_large"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/details_contact_stuff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_shadow_border_square_menu"
                android:padding="1dp"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/nav_avatar"
                    android:layout_width="@dimen/avatar_on_menu_size"
                    android:layout_height="@dimen/avatar_on_menu_size"
                    android:contentDescription="@string/account_image_description"
                    app:riv_corner_radius="15dip" />
            </LinearLayout>

            <Button
                android:id="@+id/nav_name"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:background="@color/transparent"
                android:gravity="left|center"
                android:text=""
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.Conversations.Body2b" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/nav_status_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/ic_green" />

                <Button
                    android:id="@+id/nav_status_text"
                    android:layout_width="fill_parent"
                    android:layout_height="24dp"
                    android:background="@color/transparent"
                    android:gravity="center|left"
                    android:layout_marginLeft="@dimen/spacing_medium"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

            </LinearLayout>

            <Button
                android:id="@+id/nav_status_message"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@color/transparent"
                android:text=""
                android:gravity="left|center"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.Conversations.Body2" />


        </LinearLayout>
</RelativeLayout>